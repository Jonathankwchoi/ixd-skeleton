<!doctype html>
<html>
	<head>
	    <title>Results</title>
	    <meta charset="utf-8">
	    <meta name="viewport" content="width=device-width, initial-scale=1.0">
	    <link href="css/overall.css" rel="stylesheet">

	    <script src="js/jquery-1.11.0.js"></script>
		{{> homeButton}}
		<script>
    (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
    (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
    m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
    })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

    ga('create', 'UA-159945059-1', 'auto');
    ga('require', 'GTM-THKCDJ4');
    ga('send', 'pageview');
    </script>
	</head>
	<body>
	    <h1>Results</h1>

	    <div class="songlist">
		  {{#each songs}}
		    <ol action="/toggle">
			  <button onclick="{{id}}()">{{name}}</button>
			  <pre id = "{{name}}" class="lyrics" style="display: none;">{{lyrics}}</pre>
			  <script>
			  function {{id}}() {
				var x = document.getElementById("{{name}}");
				if (x.style.display === "none") {
				    x.style.display = "block";
				} else {
				    x.style.display = "none";
				}
			  }
			  </script>
		    </ol>
		  {{/each}}
		</div>

		<form id="addSongForm" role="form" method="get" action="/addSong">
			<h3>Can't find a song?</h3>
			<h4>Add it here!</h4>

			<div class="form-group">	
			  <label for="name">Name:</label>
			  <input type="text" class="form-control" id="name" placeholder="Song name" name="name">
			</div>

			<div class="form-group">
			  <label for="lyrics">Lyrics:</label>
			  <textarea type="text" class="form-control" id="lyrics" placeholder="Song lyrics" name="lyrics" rows="4" cols="50"></textarea>
			</div>

			<input type="submit" id="submitBtn" class="btn btn-default" value="Add the song"></input>
		</form>
	</body>
</html>
